<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">

    </style>

    <style name="DrawerItemText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/materialTextLight</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ExpandedCartItemText">
    </style>

    <style name="RouteCardInfoButton">
        <item name="android:textSize">@dimen/app_text_size_xlarge</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textColor">@color/grey500</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RouteCardTitle">
        <item name="android:textSize">@dimen/app_text_size_headline</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- Body content -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textColor">#87000000</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.Subhead" parent="TextAppearance.Body2">
        <item name="android:textColor">@color/primaryText</item>
    </style>

</resources>
