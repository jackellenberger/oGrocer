<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/spacing_normal"
    android:layout_marginBottom="0dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/card_contents"
        android:textAppearance="@style/AppTheme.Light"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/map_frame">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cart_recycler_item_picture_height"
                android:id="@+id/map_frame_image"
                android:src="@drawable/ic_action_location"
                android:background="@color/grey300" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/app_bar_height"
                android:id="@+id/map_frame_text"
                android:textColor="@color/white"
                android:textAppearance="@style/RouteCardTitle"
                android:padding="@dimen/spacing_normal"
                android:text="Example Route"
                android:shadowColor="@color/grey700"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:height="2dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_2"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/card_info_row_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distance"
                android:text="X mi"
                android:textAppearance="@style/RouteCardInfoButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/spacing_normal"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="$ N"
                android:textAppearance="@style/RouteCardInfoButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/spacing_normal"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="40 m"
                android:textAppearance="@style/RouteCardInfoButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/spacing_normal"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyline_2"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/card_info_row_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stops"
                android:text="1 stop"
                android:textAppearance="@style/RouteCardInfoButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/spacing_normal"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/opportunityCostLayout"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/spacing_normal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/opportunityCost"
                    android:text="$ N"
                    android:textAppearance="@style/RouteCardInfoButton"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_micro"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/opportunityCost_up"
                    android:layout_toEndOf="@id/opportunityCost"
                    android:src="@drawable/ic_trending_down"
                    android:layout_centerVertical="true"
                    android:tint="@color/grey500"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>